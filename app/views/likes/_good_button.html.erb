<% if current_member.likepost?(tweet) %>
 <%= form_with(model: current_member.likes.find_by(tweet_id: tweet.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id %>
    <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger' %>
  <% end %>
<% else %>
   <%= form_with(model: current_member.likes.build, local: true) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id %>
    <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
  <% end %>
<% end %>