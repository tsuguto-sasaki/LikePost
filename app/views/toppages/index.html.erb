<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @tweet, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Tweet', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tweets/tweets', tweets: @tweets %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>LikePostを始めよう！</h1>
    <%= link_to 'まずは登録からどうぞ !', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>
