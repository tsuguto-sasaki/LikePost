<% unless current_member == member %>
 <% if current_member.following?(member) %>
  <%= form_with(model: current_member.relationships.find_by(follow_id: member.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :follow_id, member.id %>
    <%= f.submit 'フォロー解除', class:'btn btn-danger btn-block' %>
  <% end %>
 <% else %>
  <%= form_with(model: current_member.relationships.build, local: true) do |f| %>
   <%= hidden_field_tag :follow_id, member.id %>
   <%= f.submit 'フォローする', class:'btn btn-primary btn-block' %>
  <% end %>
 <% end %>
<% end %>
