<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @member.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@member, { size: 500 }) %>" alt="">
      </div>
    </div>
    <%= render 'relationships/follow_button', member: @member %>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= member_path(@member) %>" class="nav-link <%= 'active' if current_page?(member_path(@member)) %>">ツイート<span class="badge badge-secondary"><%= @count_tweets %></span></a></li>
      <li class="nav-item"><a href="<%= followings_member_path(@member) %>" class="nav-link <%= 'active' if current_page?(followings_member_path(@member)) %>">フォロー<span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_member_path(@member) %>" class="nav-link <%= 'active' if current_page?(followers_member_path(@member)) %>">フォロワー<span class="badge badge-secondary"><%= @count_followers %></span></a></li>
      <li class="nav-item"><a href="<%= goods_member_path(@member) %>" class="nav-link <%= 'active' if current_page?(goods_member_path(@member)) %>">お気に入り  <span class="badge badge-secondary"><%= @count_likes %></span></a></li>
    </ul>
    <%= render 'members', members: @followings %>
  </div>
</div>